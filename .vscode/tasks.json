{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CXG",
      "type": "process",
      "command": "make",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Flash CXG",
      "type": "process",
      "command": "make flash",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
  ]
}